import("//build/config/features.gni")
import("//build/test.gni")
import("../../../config.gni")

ohos_fuzztest("AudioServerCallbackFuzzTest") {
  module_out_path = "audio_framework/audio_framework_route"
  fuzz_config_file = "../audioserver_callback_fuzzer"

  include_dirs = [
    "../../../services/audio_service/server/include",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-fno-access-control",
  ]

  sources = [ "audio_server_callback_fuzzer.cpp" ]

  cflags_cc = [ "-std=c++20" ]

  deps = [
    "../../../services/audio_service:audio_service",
  ]
  external_deps = [
    "access_token:libaccesstoken_sdk",
    "c_utils:utils",
    "ipc:ipc_single",
    "safwk:system_ability_fwk",
  ]
}

group("fuzztest") {
  testonly = true
  deps = [ ":AudioServerCallbackFuzzTest" ]
}
