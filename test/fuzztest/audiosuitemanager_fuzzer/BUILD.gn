import("//build/ohos.gni")
import("//build/test.gni")
import("//build/config/features.gni")

ohos_fuzztest("AudioSuiteManagerFuzzTest") {
module_out_path = "audio_framework/audio_framework_route"
fuzz_config_file = "../audiosuitemanager_fuzzer"

include_dirs = [
"../../../services/audio_suite/client/manager/include",
"../../../interfaces/inner_api/native/audiosuite/include",
"../../../interfaces/inner_api/native/audiocommon/include",
"../../../interfaces/kits/c/audio_suite",
"../../../interfaces/kits/c/common",
"../../../frameworks/native/ohaudiosuite",
]

cflags = [
"-g",
"-O0",
"-Wno-unused-variable",
"-fno-omit-frame-pointer",
"-fno-access-control",
]

sources = [
"audio_suite_manager_fuzzer.cpp",
]

configs = [ "../../../services/audio_suite:audio_suite_public_config" ]
cflags_cc = [ "-std=c++20" ]

deps = [
"../../../services/audio_suite:audio_suite_static",
]
external_deps = [
"c_utils:utils",
"hilog:libhilog",
]

defines = []
if (use_libfuzzer || use_clang_coverage) {
defines += [ "TEST_COVERAGE" ]
}
}

group("fuzztest") {
testonly = true
deps = [ ":AudioSuiteManagerFuzzTest" ]
}