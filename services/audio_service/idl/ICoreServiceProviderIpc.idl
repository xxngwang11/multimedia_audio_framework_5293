interface ICoreServiceProviderIpc {
    [ipccode 0] void UpdateSessionOperation(
        [in] unsigned int sessionId,
        [in] unsigned int operation, /* SessionOperation */
        [in] unsigned int operationMsg /* SessionOperationMsg */);
